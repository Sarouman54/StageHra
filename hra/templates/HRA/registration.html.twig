{% extends 'base.html.twig' %}

{% form_theme formUtilisateur 'bootstrap_4_layout.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('CSS/registration.css')}}">
{% endblock %}

{% block body %}

    <header></header>
    
    {{ form_start(formUtilisateur) }}

    {{ form_row(formUtilisateur.nom, {'attr': {'placeholder': "entrer votre nom"}}) }}
    {{ form_row(formUtilisateur.prenom, {'attr': {'placeholder': "entrer votre prenom"}}) }}
    {{ form_row(formUtilisateur.mail, {'attr': {'placeholder': "exemple@gmail.com"}}) }}
    {{ form_row(formUtilisateur.mdp, {'attr': {'placeholder': "entrer votre mot de passe"}}) }}
    {{ form_row(formUtilisateur.profils, {'attr': {'placeholder': "entrer votre mot de passe"}}) }}

    <button type="submit" class="btn btn-primary">Inscription</button>

    {{ form_end(formUtilisateur) }} 

{% endblock %}