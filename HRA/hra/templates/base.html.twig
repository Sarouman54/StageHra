<!DOCTYPE html>
<html lang="fr">
    <head>
    
        <meta charset="UTF-8">
        <meta name="viewport" content="width-device-width,initial-scale-1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">

        {% block stylesheets %}
        {% endblock %}

        <link rel="stylesheet" href="{{ asset('CSS/Librairies/bootstrap.css')}}">
        <link rel="stylesheet" href="{{ asset('CSS/base.css')}}">

        {% block javascripts %}
        {% endblock %}
        
    </head>
   
    <body>
        {% block header %}
            <div id="mySidenav" class="sidenav">
            	<a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
                <a href="#"><img src="{{ asset('Images/logoHRAConcept.PNG')}}" alt="logohra" class="logohra"></a>
                <br>
                {% if not app.user %}
                    <img src="{{ asset('Images/Icones/accueil.png')}}" alt="accueil" class="home"><a href="{{ path('home')}}" class="homeText">Accueil</a>
                    <img src="{{ asset('Images/Icones/login.png')}}" alt="connexion" class="login"><a href="{{ path('app_login')}}">Connexion</a>
                    <img src="{{ asset('Images/Icones/inscription.png')}}" alt="inscription" class="register"><a href="{{ path('app_register')}}">Inscription</a>
                {% else %}
                	<a href="#" class="nav-item nav-link user">{{app.user.firstName}} {{app.user.lastName}}</a>
                	{% if is_granted('ROLE_ADMIN') %}
                    	<img src="{{ asset('Images/Icones/accueil.png')}}" alt="accueil" class="home"><a href="{{ path('adminHome')}}">Accueil</a>
                    {% else %}
                        <img src="{{ asset('Images/Icones/accueil.png')}}" alt="accueil" class="home"><a href="{{ path('driverHome')}}">Accueil</a>
                    {% endif %}                	
                 	<div class="footermenu">
                    	<hr class="dividermenu">
                        <img src="{{ asset('Images/Icones/settings.png')}}" alt="paramètres" class="settings"><a href="{{ path('settings')}}">Paramètres</a>
						<img src="{{ asset('Images/Icones/logout.png')}}" alt="déconnexion" class="logout"><a href="{{ path('app_logout')}}">Déconnexion</a>                
                    </div>
                {% endif %}
            </div>
            <span style="font-size:30px; cursor:pointer" onclick="openNav()">&#9776;</span>
            <script src="{{ asset('JS/base.js')}}"></script>

           
        {% endblock %}       

        {% block body %}        
        {% endblock %}

